---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

interface Props {
  author: CollectionEntry<"author">;
}

const { author } = Astro.props;
---

<div class="max-w-lg mx-auto my-10 bg-slate-600 rounded-lg shadow-md p-5">
  <Image
    class="w-32 h-32 rounded-full mx-auto"
    src={author.data.avatar}
    alt="Profile picture"
    width={200}
    height={200}
    transition:name={`${author.id}-${author.data.name}`}
  />
  <h2 class="text-center text-2xl font-bold mt-3 text-white">
    {author.data.name}
  </h2>
  <p class="text-center mt-1 text-gray-200">{author.data.subtitle}</p>
  <div class="flex justify-center mt-5">
    <a href={author.data.twitter} class="text-blue-500 hover:text-blue-700 mx-3"
      >Twitter</a
    >
    <a
      href={author.data.linkedIn}
      class="text-blue-500 hover:text-blue-700 mx-3">LinkedIn</a
    >
    <a href={author.data.github} class="text-blue-500 hover:text-blue-700 mx-3"
      >GitHub</a
    >
  </div>
  <div class="mt-5">
    <h3 class="text-xl font-semibold text-gray-200">Bio</h3>
    <p class="mt-2 text-gray-200">
      {author.data.bio}
    </p>
  </div>
  <div class="flex justify-end text-white mt-2">
    <a href={`/blog/${author.id}`}>Leer maÃÅs</a>
  </div>
</div>
